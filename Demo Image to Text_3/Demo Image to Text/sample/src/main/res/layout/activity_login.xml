<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Нэвтрэх хуудас"
        android:textColor="#00a2d3"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="И-мэйл хаяг"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#222222"
        android:textColorHint="#999999"
        android:layout_marginTop="75dp"
        android:layout_weight="0.11" />

    <EditText
        android:id="@+id/main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Нууц үг"
        android:inputType="textPassword"
        android:textColor="#222222"
        android:textColorHint="#999999"
        android:layout_weight="0.11" />

    <Button
        android:onClick="main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a2d3"
        android:textColor="#ffffff"
        android:text="Нэвтрэх"
        android:id="@+id/main_login"
        android:layout_below="@+id/main_password" />

    <Button
        android:onClick="main_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a2d3"
        android:textColor="#ffffff"
        android:text="Бүртгүүлэх"
        android:id="@+id/main_register"
        android:layout_below="@+id/main_login"
        android:layout_marginTop="5dp" />
</LinearLayout>