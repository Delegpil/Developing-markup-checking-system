<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Бүртгүүлэх хуудас"
        android:textColor="#00a2d3"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_name"
        android:hint="Нэвтрэх нэр"
        android:layout_below="@+id/textview"
        android:textColor="#222222"
        android:textColorHint="#999999"

        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#222222"
        android:textColorHint="#999999"
        android:ems="10"
        android:id="@+id/register_email"
        android:hint="Имэйл хаяг" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:textColor="#222222"
        android:textColorHint="#999999"
        android:layout_below="@+id/register_name"
        android:hint="Нууц үг" />

    <Button
        android:onClick="register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Бүртгэх"
        android:background="#00a2d3"
        android:textColor="#ffffff"
        android:id="@+id/register_register"
        android:layout_marginTop="30dp" />


</LinearLayout>